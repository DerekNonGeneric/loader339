    "@typescript-eslint/experimental-utils": "5.32.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "minimist": "1.2.6",
    "npm-check-updates": "16.0.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "semver": "7.3.7"
  },
  "dependencies": {
    "cli-truncate": "3.1.0",
    "cross-spawn": "7.0.3"
  }
}
